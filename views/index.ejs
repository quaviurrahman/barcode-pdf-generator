<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Barcode PDF Generator</title>
</head>
<body>
    <h1>Barcode PDF Generator</h1>

    <!-- Form to input barcode, stock count, and upload image -->
    <form action="/add-entry" method="post" enctype="multipart/form-data">
        <label for="barcode">Barcode:</label><br>
        <input type="text" id="barcode" name="barcode" required><br><br>

        <label for="stockCount">Stock Count:</label><br>
        <input type="text" id="stockCount" name="stockCount" required><br><br>

        <label for="barcodeImage">Upload Image (optional):</label><br>
        <input type="file" id="barcodeImage" name="barcodeImage" accept="image/*"><br><br>

        <button type="submit">Add Entry</button>
    </form>

    <!-- Display the list of entries added -->
    <h2>Entries:</h2>
    <ul>
        <% entries.forEach((entry, index) => { %>
            <li><strong>Barcode:</strong> <%= entry.barcode %>, <strong>Stock Count:</strong> <%= entry.stockCount %></li>
        <% }); %>
    </ul>

    <!-- Button to generate PDF and ZIP -->
    <form action="/generate" method="post">
        <button type="submit">Generate PDF and Download Images ZIP</button>
    </form>
</body>
</html>
